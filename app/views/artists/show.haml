= table_for :songs do |t|
  -#= t.head do
    = t.row do
      = t.header "Name"
  = t.body do
    - resource.songs.each do |song|
      = t.row do
        = t.cell do
          = link_to(song.name, song_path(song.artist.to_param, song.to_param))

= widget :menu do
  = nav "Edit", edit_artist_path(@artist.to_param)
  = nav "New Song", new_song_path(@artist.to_param)